{
  "name": "bnomei/kirby-kart",
  "type": "kirby-plugin",
  "version": "5.6.4",
  "description": "Streamlined E-Commerce Shopping Cart Solution",
  "license": "proprietary",
  "authors": [
    {
      "name": "Bruno Meilick",
      "email": "b@bnomei.com"
    }
  ],
  "keywords": [
    "buy",
    "cart",
    "checkout",
    "downloads",
    "e-commerce",
    "fastspring",
    "gateway",
    "gumroad",
    "invoice",
    "invoice-ninja",
    "kirby",
    "kirby5",
    "kirby-cms",
    "kirby-plugin",
    "lemonsqueezy",
    "merchant-of-record",
    "mollie",
    "order",
    "paddle",
    "payment",
    "payone",
    "paypal",
    "provider",
    "product",
    "product-variants",
    "sell",
    "shop",
    "shopify",
    "square",
    "snipcart",
    "stripe",
    "stock",
    "sumup"
  ],
  "autoload": {
    "psr-4": {
      "Bnomei\\Kart\\": "classes/Kart"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true,
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "require": {
    "php": ">=8.2",
    "getkirby/composer-installer": "^1.1",
    "ext-intl": "*",
    "s1syphos/php-simple-captcha": "^2.3"
  },
  "require-dev": {
    "getkirby/cms": "5.1.0-rc.1",
    "larastan/larastan": "^v3.0.0",
    "laravel/pint": "^1.13",
    "pestphp/pest": "^v3.5.1",
    "spatie/ray": "^1.39",
    "getkirby/cli": "^1.5"
  },
  "scripts": {
    "stan": "./vendor/bin/phpstan",
    "fix": "./vendor/bin/pint",
    "testBefore": "env KIRBY_HOST=kart.test vendor/bin/kirby testing:beforeAll",
    "testAfter": "env KIRBY_HOST=kart.test vendor/bin/kirby testing:afterAll",
    "test": "./vendor/bin/pest --profile",
    "rector": "./vendor/bin/rector",
    "dist": [
      "@testAfter",
      "composer fix",
      "vendor/bin/kirby kart:blueprints-publish",
      "composer install --no-dev --optimize-autoloader",
      "git rm -rf --cached .; git add .;",
      "echo -n 'Li9jbGFzc2VzL0thcnQvTGljZW5zZS5waHA=' | base64 -D | xargs -I {} shasum -a 1 {} | awk '{print $1}'"
    ],
    "kirby": [
      "composer install",
      "composer update",
      "composer install --working-dir=tests/kirby --no-dev --optimize-autoloader",
      "composer update --working-dir=tests/kirby",
      "sed -i.bak 's/function dump(/function xdump(/g' tests/kirby/config/helpers.php",
      "sed -i.bak 's/function e(/function xe(/g' tests/kirby/config/helpers.php"
    ]
  },
  "extra": {
    "kirby-cms-path": "tests/kirby"
  }
}
